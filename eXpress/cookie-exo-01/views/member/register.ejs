<%- include('../partial/_header.ejs') %>
<%
var errorMessage;
var data;
%>

<h1>S'inscrire</h1>
<form method="POST">
    <div>
        <label for="input-username">Pseudo</label>
        <input id="input-username" name="username" type="text" value="<%= data?.username %>">
    </div>
    <div>
        <label for="input-firstname">Pr√©nom</label>
        <input id="input-firstname" name="firstname" type="text" value="<%= data?.firstname %>">
    </div>
    <div>
        <label for="input-lastname">Nom</label>
        <input id="input-lastname" name="lastname" type="text" value="<%= data?.lastname %>">
    </div>
    <div>
        <label for="input-pwd">Mot de passe</label>
        <input id="input-pwd" name="password" type="password">
    </div>
    <div>
        <label for="input-confirm">Confirmation</label>
        <input id="input-confirm" name="confirm" type="password">
    </div>
    <div>
        <button type="submit">Login</button>
        <% if(errorMessage) { %>
            <span class="error"><%= errorMessage %></span>
        <% } %>
    </div>
</form>

