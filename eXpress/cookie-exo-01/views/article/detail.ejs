<% /* L'article   */ %>

<h1><%= article.title %></h1>
<h2><%= article.author.firstname %> <%= article.author.lastname %></h2>

<p><%= article.content %></p>

<form action="/article/add-comment" id="comment-form">
    <h3 aria-label="input-comment">Ajouter un commentaire</h3>
    <textarea name="comment" id="input-comment" cols="30" rows="10"></textarea>
    <br>
    <input type="hidden" name="slug" value="<%= article.slug %>" >
    <button type="submit">Envoyer</button>
    <span><%= message %></span>
</form>
<br>
<div id="comment-list">
