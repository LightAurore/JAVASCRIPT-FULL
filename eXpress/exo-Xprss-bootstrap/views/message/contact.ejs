<%- include('../partials/_header.ejs', { title: 'Me contacter' }) %>
    <main>
       <form method="post" style="width: 600px; margin: 0 auto;">
        <div class="form-group row">
            <label for="pseudo">Pseudo *</label>
            <input  type="text" class="form-control" id="pseudo" name="pseudo">
            <label for="email">E-mail</label>
            <input type="email" name="email" id="email" required>
        </div>
        <div class="form-group row">
            <label for="category">Raison</label>
            <select name="category" id="category">
                <option value="" aria-readonly="">-- SVP, choisissez votre motif --</option>
                <option value="Info">Info</option>
                <option value="Devis">Devis</option>
                <option value="Reclamation">Reclamation</option>
                <option value="Autres">Autres</option>
            </select>
            <label for="message" class="col-4 col-form-label">Votre message</label>
            <textarea name="message" id="" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group row">
            <div class="offset-4 col-8">

                <button type="reset" class="btn btn-danger">Effacer</button>
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
        </div>
       </form>
    </main>

    <%- include('../partials/_footer.ejs') %>

