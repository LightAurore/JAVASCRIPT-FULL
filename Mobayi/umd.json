# Schema NoSql json pour MongoDb

## Customer entity
{
    "customer_id" : ObjectId,
    "firstname" : String,
    "lastname" : String,
    "img_url" : String,
    "username" : String,
    "password" : String,
    "domain_expert" : String,
    "role" :{
        "role_id" : ObjectId,
        "role_name" : Boolean,  // Admin - Author - Censor - Customer
    },
    "createAt" : Date,
    "updateAt" : Date,
    "banned": {
        "isBanned" : Boolean,
        "isReported" : Boolean,
        "reason": String,
        "createAt" : Date,
        "updateAt" : Date
    }
}

