## WordGame // A faire vraiment si tu te fais chier durant une nuit blanche (ou apres le tfe :p)
[
    {
        "game_id": ObjectId,
        "game_name": String,
        "createAt": Date,
        "updateAt": Date,
        "level": [
            {
                "level_id": ObjectId,
                "level_name": String,
                "step": Number
            }
        ],
        "players" :[
            {
                "player_id": ObjectId, // customer_id
                "player_name": String,
                "createAt": Date,
                "best": {
                    score: Number,
                    level: Number,
                    dificulty: string,
                },
                "last": {
                    score: Number,
                    level: Number,
                    dificulty: string,
                },
            }
        ]
    }
]