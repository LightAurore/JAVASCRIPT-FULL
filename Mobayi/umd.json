## Role Collection
{
    "role_id" : ObjectId,
    "role_name" : string,  // Admin - Author - Censor - Customer
},


## Customer entity
{
    "customer_id" : ObjectId,
    "firstname" : String,
    "lastname" : String,
    "img_url" : String,
    "email" : String,
    "username" : String,
    "password" : String,
    "domain_expert" : String,
    "role" : ObjectId, // ref: Role
    "createAt" : Date,
    "updateAt" : Date,
    "banned": {
        "isBanned" : Boolean,
        "reason": String,
        "createAt" : Date,
        "updateAt" : Date
    }
}

## Article entity
{
    "article_id" : ObjectId,
    "title" : String,
    "slug" : String,
    "category": String,
    "theme": String,
    "images" : [
        {
            "img_id" : ObjectId,
            "img_url": String,
            "alt": String,
        }
    ],
    "content" : String,
    "author" : ObjectId, // ref: customer
    "createAt" : Date,
    "updateAt" : Date,
    "isPublished" : Boolean,
    "isVisible" : Boolean,
    "likes" : [
        ObjectId  // ref: customer
    ],
    "dislikes" : [
        ObjectId,  // ref: customer
    ],
    "reporters" : [
        {
            "reporter_id" : ObjectId,  // ref: Report_Raison
            "customer_id": ObjectId,   // ref: customer 
            "createAt" : Date,
        }
    ],
    "comments" : [
        {
            "comment_id" : ObjectId,
            "content" : String,
            "author" : ObjectId, // ref: customer
            "createAt" : Date,
            "updateAt" : Date,
            "likes" : [
                ObjectId,  // ref: customer
            ],
            "dislikes" : [
                ObjectId,  // ref: customer
            ],
            "reporters" : [
                {
                    "reporter_id" : ObjectId, // customer_id
                    "customer_id": ObjectId,   // ref: customer 
                    "createAt" : Date,
                }
            ],
            "isPublished" : Boolean,
            "isVisible" : Boolean
        }
    ]
}

