<%- include('../partials/_head.ejs') %>
<%- include('../partials/_header.ejs') %>
<%- include('../partials/_navbar.ejs') %>
<%- include('../partials/_banner.ejs') %>

<% 
var errorMessage;
var data;
%>

<main>

    <form method="post">
        <h2>Connexion</h2>
        <div>
            <label for="input-username"></label>
            <input type="text" id="input-username" name="username" value="<%= data?.username %>">
        </div>
        <div>
            <label for="input-pwd"></label>
            <input type="password" name="password" id="input-pwd" value="<%= data?.password %>">
        </div>
        <div>
            <button type="submit">Se connecter</button>
            <% if(errorMessage) { %>
                <span class="error"><%= errorMessage %></span>
            <% } %>
        </div>
        <div>
            <span>Si tu n'est inscrit : <a href="/customer/register">inscription</a></span>
        </div>
    </form>
    
</main>

