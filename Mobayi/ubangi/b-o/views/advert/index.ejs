<%- include('../partials/_head.ejs') %>
<%- include('../partials/_header.ejs') %>
<%- include('../partials/_navbar.ejs') %>
<%- include('../partials/_banner.ejs') %>

<style>

        .link-new_advert{
            text-decoration: none;
            color: rgb(253, 255, 227);
            font-weight: bold;
            font-size: 1.2rem;
            margin:0 auto 10px;
            padding: 10px;
            background-color: rgb(105, 105, 86);
            border-radius: 5px;
        }

       .advert-cards {
            display: flex;
            flex-direction: column;
            width: 90%;
            margin: 0 auto;
            border: 1px solid #0f056b;

            & > h2{
                display: flex;
                text-align: center;
                letter-spacing: 2px;
                align-items: center;
                justify-content: center;
                background-color: #4b0082;
                color: #f4fefe;
                font-weight: 900;
                -webkit-text-stroke: 0.5px #008080;
                stroke-width: 10px;
                height: 50px;

            }
        }

        .advert-card__head{
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            margin-bottom: 6px;
            padding: 6px;
            background-color: darkblue;
            color: aliceblue;
            border-radius:0 0 8px 8px;
            & > *{
                text-align: left;
            }
        }

        .advert-card{
            
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            margin-bottom: 6px;
            padding: 6px;
            background-color: cornsilk;
            border-radius: 4px;
            text-align: left;

            


            & > *{
                position: relative;
                text-align: left;
                height: 100%;
            }
        }
</style>

<main>
    <a class="link-new_advert" href="/advert/new">CrÃ©er un advert</a>
    
    <section class="advert-cards">
        <h2>Liste des adverts</h2>

    <% if(adverts.length === 0) { %>
        <p>Il n'y pas encore d'adverts ðŸ˜¿</p>
    <% } %>
    <div>
        <advert class="advert-card__head">
            <p class="title">TITRE</p>
            <p class="author">AUTEUR</p>
            <p class="desc">DESCRIPTION</p>
            <p class="update-date">DATE DE MODIFICATION</p>
        </advert>
    </div>
    <% for(const advert of adverts) { %>

        <a href="/advert/detail/<%= advert.slug %>">
            <advert class="advert-card">
                <p class="title"><%= advert.title %></p>
                <p class="author"><%= advert?.author?.username ?? "no author" %></p>
                <p class="desc"><%= advert.desc %></p>
                <p class="update-date"><%= advert.updatedAt.toLocaleDateString('fr') %></p>
            </advert>
        </a>

    <% } %>

</section>
</main>

<%- include('../partials/_footer.ejs') %>